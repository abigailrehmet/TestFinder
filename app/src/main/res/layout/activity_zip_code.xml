<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="209dp"
            android:layout_height="228dp"
            android:layout_gravity="start"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="100sp"
            android:layout_marginRight="15sp"
            android:gravity="center"
            android:text="@string/ZipCodeTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="15pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:contentDescription="@string/gif"
            app:srcCompat="@drawable/jump_pin"
            android:layout_marginLeft="0sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:gravity="center"
        android:hint="@string/ZipHint"
        android:layout_marginTop="100sp"
        android:autofillHints="@string/ZipHint"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:text="@string/Search" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/currLocationTxt"
        android:layout_marginTop="50sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/useCurrLocationBtn"
        android:layout_marginRight="55sp"
        android:layout_marginLeft="55sp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_marginTop="250sp"
        android:gravity="center"
        android:textStyle="italic"
        />


</LinearLayout>